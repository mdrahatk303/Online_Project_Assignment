        <%- body %>
        <!-- <%- include('_footer'); -%> -->
      
        <%- script %>

        <script>
            <%if(flash.success_message && flash.success_message.length>0){%>
                    new Noty({
                        theme:'relax',
                        text: "<%=flash.success_message%>",
                        type:'success',
                        layout:'topCenter',
                        timeout:1500,
                        
                    }).show();
                <%}%> 

                <%if(flash.error_message && flash.error_message.length>0){%>
                    new Noty({
                        theme:'relax',
                        text: "<%=flash.error_message%>",
                        type:'error',
                        layout:'topCenter',
                        timeout:1500,
                        
                    }).show();
                <%}%> 
        </script>
       
    </body>
</html> 
 
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link rel="stylesheet" href="/css/profile.css">
<!------ Include the above in your HEAD tag ---------->
<%- include('_header'); -%>
<div class="container emp-profile">
       
            <form method="post" action="/stud/update" enctype="multipart/form-data">
              <input type="hidden" name="email" placeholder="New Email" value="<%=user.email%>" required>
              <input type="hidden" name="name" placeholder="New User Name" value="<%=user.name%>" required>
              <input type="hidden" name="cgpa" placeholder="Your CGPA" value="<%=user.cgpa%>" required>
              <input type="hidden" name="percentage" placeholder="Your percentage" value="<%=user.percentage%>" required>
        
                <div class="row">
                    <div class="col-md-4">
                        <div class="profile-img">
                            <!-- <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS52y5aInsxSm31CvHOFHWujqUx_wWTS9iM6s7BAm21oEN_RiGoog" alt=""/> -->
                            <img src="<%=locals.user.avatar%>" alt="<%=locals.user.name%>">
                            <div class="file btn btn-lg btn-primary" >
                                Change Photo
                                <input type="file" name="avatar" style="cursor: pointer;">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="profile-head">
                                    <h5>
                                      <%=locals.user.name%>
                                    </h5>
                                    <%if(locals.user.identity[0]==="p" && locals.user.hod==="hod"){%>
                                        
                                            <a href="/prof/hod">HOD</a>
                                          
                                    <%}%>
                                    <h6>
                                      <%if(locals.user.identity[0]==='s'){%>
                                       Student
                                        <%}else{%>
                                          Professor
                                          <%}%>
                                    </h6>
                                    <p class="proile-rating" style="color: rgb(194, 207, 207);">********************</p>
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item">
                                    <span class="nav-link active" id="home-tab" data-toggle="tab" role="tab" aria-controls="home" aria-selected="true">About</span>
                                </li>
                                <!-- <li class="nav-item">
                                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Timeline</a>
                                </li> -->
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <%if(locals.user.identity[0]==='s'){%>
                        <input type="submit" class="profile-edit-btn" name="btnAddMore" value="Edit Profile"/>
                        <%}else{%>
                            <input type="submit" class="profile-edit-btn" name="btnAddMore" value="Edit Profile" formaction="/prof/update"/>
                        <%}%>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="profile-work">
                            <p>WORK LINK</p>
                            <a href="https://www.iiests.ac.in/">Website Link</a><br/>
                            <a href="">Bootsnipp Profile</a><br/>
                            <a href="">Bootply Profile</a>
                            <p>SKILLS</p>
                            <a href="">Web Designer</a><br/>
                            <a href="">Web Developer</a><br/>
                            <a href="">WordPress</a><br/>
                            <a href="">WooCommerce</a><br/>
                            <a href="">PHP, .Net</a><br/>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="tab-content profile-tab" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>User Id</label>
                                            </div>
                                            <div class="col-md-6">
                                                <%if(locals.user.identity[0]==='s'){%>
                                                    <p><%=locals.user.enrollment%></p>
                                                    <%}else{%>
                                                        <p><%=locals.user.id%></p>
                                                      <%}%>
                                                
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Name</label>
                                            </div>
                                            <div class="col-md-6">
                                              <p><%=locals.user.name%></p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Email</label>
                                            </div>
                                            <div class="col-md-6">
                                              <p><%=locals.user.email%></p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <%if(locals.user.identity[0]==='s'){%>
                                        
                                            <div class="col-md-6">
                                                <label>CGPA</label>
                                              </div>
                                              <div class="col-md-6">
                                                <p><%=user.cgpa%></p>
                                               
                                            </div>
                                            <%}%>
                                        </div>
                                        <div class="row">
                                        <%if(locals.user.identity[0]==='s'){%>
                                          <div class="col-md-6">
                                            
                                              <label>Percentage</label>
                                            </div>
                                            <div class="col-md-6">
                                               <p><%=user.percentage%></p>
                                              
                                          </div>
                                          <%}%>
                                      </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Profession</label>
                                            </div>
                                            <div class="col-md-6">
                                              <%if(locals.user.identity[0]==='s'){%>
                                              <p>Student</p>
                                              <%}else{%>
                                                <p>Professor</p>
                                                <%}%>

                                            </div>
                                        </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </form>           
        </div>